<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optionsView"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    tools:context=".OptionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radius"
        android:id="@+id/txtRadius"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:layout_marginLeft="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtRadiusValue"
        android:textSize="40dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/txtRadius"
        android:layout_toRightOf="@+id/txtRadius"
        android:layout_marginLeft="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/txtMinusRadius"
        android:textSize="100dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/txtRadius"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/txtPlusRadius"
        android:textSize="65dp"
        android:textIsSelectable="false"
        android:layout_toRightOf="@+id/txtRadiusValue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/txtRefresh"
        android:textSize="40dp"
        android:layout_below="@+id/txtRadius"
        android:layout_alignLeft="@+id/txtRadius"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtRefreshValue"
        android:textSize="40dp"
        android:layout_below="@+id/txtMinusRadius"
        android:layout_alignLeft="@+id/txtRadiusValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/txtMinusRefresh"
        android:textSize="100dp"
        android:layout_below="@+id/txtRadiusValue"
        android:layout_alignLeft="@+id/txtMinusRadius"
        android:layout_marginTop="-10dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/txtPlusRefresh"
        android:textSize="65dp"
        android:textIsSelectable="false"
        android:clickable="true"
        android:layout_below="@+id/txtPlusRadius"
        android:layout_toRightOf="@+id/txtRefreshValue"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Poi"
        android:id="@+id/btnNewPoi"
        android:textSize="30dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/txtRefreshValue"
        android:layout_toRightOf="@+id/txtRefresh"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="-60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtDistance"
        android:layout_alignParentTop="false"
        android:layout_alignRight="@+id/btnNewPoi"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/btnNewPoi"
        android:text="Distance" />

</RelativeLayout>